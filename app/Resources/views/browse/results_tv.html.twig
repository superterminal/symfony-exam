{% extends 'base.html.twig' %}

{% block body %}

    <div class="container body-content text-center">
        <div class="row">
            {% for tv in result %}
                <div class="col-md-4">
                    <article>
                        <a href="{{ path('view_tv_show', {id: tv.id}) }}">
                            <img src="{{ loadImage(tv.posterPath) }}" alt="" width="200px" height="300px"><br>
                            <h5>{{ tv.name }}</h5>
                            <h5>Click for more info</h5>
                        </a>
                    </article>
                </div>
            {% endfor %}
            <div class="navigation text-center">
                {{ knp_pagination_render(result) }}
            </div>
        </div>
    </div>
{% endblock %}

